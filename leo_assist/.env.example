# Google Cloud
GOOGLE_GENAI_USE_VERTEXAI=TRUE
GOOGLE_CLOUD_PROJECT=PROJECT_ID
GOOGLE_CLOUD_LOCATION=us-central1

# Project Settings
PROJECT_NAME="Leo RAG Assistant"
VERSION="0.1.0"
DEBUG="False"

# Paths
BASE_DIR="."
DATA_DIR="./data"
VECTOR_STORE_PATH="./data/vector_store"

# ChromaDB Settings
CHROMA__COLLECTION_NAME="leo_docs"
CHROMA__ANONYMIZED_TELEMETRY="False"
CHROMA__ALLOW_RESET="True"
CHROMA__DB_IMPL="duckdb+parquet"
CHROMA__API_IMPL="rest"
CHROMA__SERVER_HOST="localhost"
CHROMA__SERVER_HTTP_PORT="8000"
CHROMA__SERVER_SSL_ENABLED="False"

# Chunking Settings
CHUNKING__SIZE=1000
CHUNKING__OVERLAP=200

# Web Downloader Settings
WEB_DOWNLOADER__MAX_PAGES=1
WEB_DOWNLOADER__REQUEST_DELAY=1.0
WEB_DOWNLOADER__USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
WEB_DOWNLOADER__TIMEOUT=30

# Embedding Configuration
# EMBEDDING__MODEL_NAME="gemini-embedding-exp-03-07"
EMBEDDING__MODEL_NAME="text-embedding-005"
EMBEDDING__DIMENSION=768
EMBEDDING__TASK_TYPE="retrieval_document"
EMBEDDING__BATCH_SIZE=10
EMBEDDING__MAX_RETRIES=3
EMBEDDING__TIMEOUT=30

# LLM Configuration
LLM__MODEL="gemini-2.5-flash-preview-05-20"
LLM__MAX_TOKENS=8192
LLM__TEMPERATURE=0.5
LLM__TOP_P=1.0
LLM__TOP_K=32

# Retrieval Configuration
RETRIEVAL__TOP_K=10
RETRIEVAL__SCORE_THRESHOLD=0.6
RETRIEVAL__MAX_CHARS=8000
RETRIEVAL__RERANKER__NAME="parent"  # gemini, hybrid, or parent
RETRIEVAL__RERANKER__MODEL_NAME="gemini-2.5-flash-preview-05-20"
RETRIEVAL__RERANKER__TEMPERATURE=0.0
RETRIEVAL__RERANKER__ALPHA=0.6
RETRIEVAL__RERANKER__BM25_K1=1.2
RETRIEVAL__RERANKER__BM25_B=0.75
RETRIEVAL__RERANKER__TOP_K=5
RETRIEVAL__RERANKER__MAX_CHUNKS=3

# Data Sources (as JSON strings)
REPOSITORIES_JSON='[
  {
    "url": "https://github.com/ProvableHQ/leo-examples.git",
    "name": "leo-examples",
    "branch": "main",
    "include": ["*.leo", "README.md"],
    "exclude": ["node_modules/", "target/"]
  }
]'

WEBSITES_JSON='[
  {
    "url": "https://docs.leo-lang.org/leo",
    "name": "leo-docs",
    "include_paths": ["/"],
    "exclude_paths": ["/api/"]
  }
]'
